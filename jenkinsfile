@Library('github.com/releaseworks/jenkinslib') _

pipeline {
    agent any
    environment {
        registry = "150172465894.dkr.ecr.us-east-1.amazonaws.com/node"
    }

    stages {
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/sirishavsp/finalProject.git']]])
            }
        }

    // Building Docker images
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry
        }
      }
    }

    // Uploading Docker images into AWS ECR
    stage('Pushing to ECR') {
        steps{
            script {
                sh 'docker login -u AWS -p $(aws ecr get-login-password --region us-east-1) 150172465894.dkr.ecr.us-east-1.amazonaws.com/node '
                sh 'docker push 150172465894.dkr.ecr.us-east-1.amazonaws.com/node'
            }
        }
    }

    stage('Docker Run') {
     steps{
         script {
             sshagent(credentials : ['aws_ec2']){

                sh 'ssh -o StrictHostKeyChecking=no -i finalProject.pem ubuntu@10.0.2.11'

             }
                //sh 'ssh -i /login/finalProject.pem ubuntu@10.0.2.11'
                sh 'docker run -d -p 8081:8080 --rm --name node 150172465894.dkr.ecr.us-east-1.amazonaws.com/node'
            }
      }
    }
    }
}
